


<%= simple_form_for @team do |f| %>
  <%= f.input :name %>
  <%= f.input :home_town %>
  <%= f.input :formed %>
  <%= f.label :active %>
  <%= f.collection_radio_buttons :active, [[true, 'Yes'] ,[false, 'No']], :first, :last ,:style =>"display:inline",item_wrapper_tag: :div %>
  <%= f.button :submit, class:"btn btn-outline-primary" %>
<% end %>
