<div class="container">
     <h3><%= @team.name %></h3>
     <p><%= @team.home_town %></p>
      <small>
        <p>Formed - <%= @team.formed %></p>
      </small> 
      <small>
        <p>Active - <%= @team.active %></p>
      </small> 
</div>

<div class="container">
     <%= link_to("Edit", edit_team_path(@team.id), class:"btn btn-success")%>
     <%= link_to("Delete",team_path(@team),method: :delete,data:{confirm: "Are you sure you want to delete ?"}, class:"btn btn-danger") %>
</div>