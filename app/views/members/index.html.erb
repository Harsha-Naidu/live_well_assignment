<%= render 'navbar'%>
<div class="container">

<div class="container">
  <div class="row">
    <div class="col">
       <h1><%= @member_count %> Heroes</h1>
    </div>
    <div class="col-2">
        <%= link_to("New",new_member_path, class:"btn btn-success")%>
        <span>
            <%= link_to("Reset to Default","/members",method: :delete,data:{confirm: "Are you sure you want to reset to default ?"}, class:"btn btn-danger") %>
        </span> 
    </div>  
    </div>
    
    <div class="col align-self-center">
      <%= form_tag(members_path,method: :get) do%>
        <%=text_field_tag(:search, params[:search]) %>
        <%=submit_tag ("search")%>
      <% end %>
    </div>
    
</div>
<br/>

    <table class="table table-striped" cellspacing="0" width=100%>
    <thead>
      <tr class="table-primary">
        <th>Name</th>
        <th>Age</th>
        <th>Team Name</th>
        <th>Secret Identity</th>
        <th>Powers</th> 
      </tr>
    </thead>
    <% @members.each do |member| %> 
            <tbody>
            <tr> 
            <td><%= link_to(member.name, member_path(member.id))%></td>
                <td><%= member.age %></td>
                <td><%= member.team.name %></td>
                <td><%= member.secret_identity %></td>
                <td><%= member.powers %></td>
            </tr>
            </tbody>
    <% end %>
  </table>
</div>