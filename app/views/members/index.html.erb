<div class="container">

<div class='container-fluid'>
    <div style="float:left">
        <nav class="navbar navbar-expand navbar-black justify-content-between">
            <ul class="navbar-nav ml-auto">
          
                <li class="nav-item active mr-4">
                   <h4> <%= link_to 'Home', root_path  %></h4>
                </li>
                >
                <li class="nav-item mr-3">
                   <h4><%= link_to 'Teams', teams_path %><h4>
                </li>
            </ul>
    </div>
</div>
<div class="container">
    <div style="float:left">
       <h1><%= @member_count %> Heroes</h1>
    </div>
    <div style="float:right">
        <%= link_to("New",new_member_path, class:"btn btn-success")%>
        <span>
            <button type="button" class="btn btn-danger"><h4><b>Reset to Default</b></h4></button>
        </span> 
    </div>  
</div>
<br/>
    <table class="table table-striped" cellspacing="0" width="100%">
    <thead>
      <tr class="table-primary">
        <th>Name</th>
        <th>Age</th>
        <th>Secret Identity</th>
        <th>Powers</th> 
      </tr>
    </thead>
    <% @members.each do |member|%>  
        <tbody>
        <tr> 
            <td><%= link_to(member.name, member_path(member.id))%></td>
            <td><%= member.age %></td>
            <td><%= member.secret_identity %></td>
            <td><%= member.powers %></td>
        </tr>
        </tbody>
    <% end %>
  </table>
</div>